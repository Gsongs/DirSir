<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopActivity">
    <LinearLayout
        android:layout_weight="1"
        android:background="#48ADFA"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/fanhui"
                android:layout_gravity="center"
                android:src="@drawable/backs"
                android:layout_width="50dp"
                android:layout_height="30dp"></ImageView>
        </LinearLayout>
        <TextView
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:text="购物车"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:id="@+id/zhuce"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>
    </LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/reshsops"
    android:layout_weight="8"
    android:layout_width="match_parent"
    android:layout_height="0dp"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <CheckBox
            android:id="@+id/quanxuan"
            android:layout_weight="2"
            android:text="全选"
            android:layout_width="0dp"
            android:layout_height="match_parent"></CheckBox>

        <TextView
            android:id="@+id/price"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#F18080"
            android:gravity="center"
            android:text="价格"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>
        <TextView
            android:visibility="gone"
            android:id="@+id/pricesss"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#F18080"
            android:gravity="center"
            android:text="价格"
            android:layout_weight="0"
            android:layout_width="0dp"
            android:layout_height="match_parent"></TextView>


        <LinearLayout
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <Button
                android:textSize="@dimen/rc_margin_size_16"
                android:background="@drawable/button_shops"
                android:id="@+id/jiesuan"
                android:gravity="center"
                android:text="结算"
                android:textColor="#FFFFFF"
                android:layout_width="150dp"
                android:layout_height="50dp"></Button>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>