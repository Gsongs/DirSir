<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <LinearLayout
            android:layout_gravity="center"
            android:background="@drawable/backuser"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <LinearLayout

                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/tel"
                        android:layout_width="30dp"
                        android:layout_height="30dp"></ImageView>
                </LinearLayout>

                <EditText
                    android:background="@null"
                    android:id="@+id/haoma"
                    android:hint="请输入手机号码"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></EditText>

                <Button
                    android:id="@+id/yanzhengma"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#26C6DA"
                    android:text="获取验证码"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="#cccccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/mima"
                        android:layout_width="30dp"
                        android:layout_height="30dp"></ImageView>
                </LinearLayout>
                <EditText
                    android:background="@null"
                    android:id="@+id/duanxin"
                    android:hint="请输入短信验证"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="#cccccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/mima"
                        android:layout_width="30dp"
                        android:layout_height="30dp"></ImageView>
                </LinearLayout>
                <EditText
                    android:background="@null"
                    android:id="@+id/pass"
                    android:hint="请输入密码"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:background="#cccccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/mima"
                        android:layout_width="30dp"
                        android:layout_height="30dp"></ImageView>
                </LinearLayout>
                <EditText
                    android:background="@null"
                    android:id="@+id/repass"
                    android:hint="请在次输入密码"
                    android:layout_weight="9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></EditText>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:background="@drawable/bottons"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:id="@+id/zhuce"
            android:text="注册"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></Button>
    </LinearLayout>

</LinearLayout>